<% content_for(:page_title) { "Rails Example: Shop - #{@product["title"]}" }%>

<section>
  <%= render "shared/shopping_basket" %>
  <hr/>
  <div class="single-product">
    <h3><%= @product["title"] %></h3>
    <p><%= @product["description"][1..-2] %></p>
    <p><%= @product["display_price"].html_safe %></p>
      <%= button_to "Add to basket", shop_all_products_path, remote:true, method: :get, class: "basket-add" %>
  </div>
  <%= image_tag("skis.jpg", class: "product-img") %>
</section>
